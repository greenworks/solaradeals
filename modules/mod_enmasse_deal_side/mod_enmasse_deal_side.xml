<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
    <name>EnMasse Deal Side</name>
    <version>1.5.0</version>
    <description>Show Deal Side</description>
    <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
                <filename module="mod_enmasse_deal_side">mod_enmasse_deal_side.php</filename>
                <filename>index.html</filename>
                <filename>helper.php</filename>
                
        </files>
    
   <params>
        <!-- parameter to allow placement of a module class suffix for the module table / xhtml display -->
                <param name="dealId" type="text" default="" label="Deal ID" description="ID of the deal to be featured" /> 
                <param name="dealHeight" type="text" default="" label="Module Height" description="Enter the height of module" />
                <param name="dealWidth" type="text" default="" label="Module Width" description="Enter the width of module" />  
                <param name="css_class_suffix" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" /> 
    </params>

</install>